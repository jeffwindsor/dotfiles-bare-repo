
# reload skhd
cmd + ctrl       - r : skhd -r

# app launchers
cmd              - return : open -na 'alacritty'
cmd + shift      - return : open -a  'Finder'
cmd + ctrl       - return : open -na 'firefox'
cmd + ctrl + alt - return : open -na 'safari'
cmd              - 0x2A   : open -na 'emacs'         # backslash
cmd + ctrl       - 0x2A   : open -na 'Intellij IDEA' # backslash
cmd + ctrl + alt - 0x2A   : open -na 'VSCodium'      # backslash
#cmd              - 0x2B   : open -a 'System Preferences'        # Comma


# layouts
cmd + ctrl - b : yabai -m config layout bsp
cmd + ctrl - s : yabai -m config layout stack
cmd + ctrl - f : yabai -m config layout float

# focus
cmd - h     : yabai -m window --focus west
cmd - j     : yabai -m window --focus south
cmd - k     : yabai -m window --focus north
cmd - l     : yabai -m window --focus east
cmd - left  : yabai -m space --focus prev
cmd - right : yabai -m space --focus next
cmd - 1     : yabai -m space --focus 1
cmd - 2     : yabai -m space --focus 2
cmd - 3     : yabai -m space --focus 3
cmd - 4     : yabai -m space --focus 4
cmd - 5     : yabai -m space --focus 5
cmd - 6     : yabai -m space --focus 6
cmd - 7     : yabai -m space --focus 7
cmd - 8     : yabai -m space --focus 8
cmd - 9     : yabai -m space --focus 9
cmd - 0     : yabai -m space --focus 0

# movement
cmd + ctrl - h     : yabai -m window --swap west
cmd + ctrl - j     : yabai -m window --swap south
cmd + ctrl - k     : yabai -m window --swap north
cmd + ctrl - l     : yabai -m window --swap east
cmd + ctrl - left  : yabai -m window --space prev; yabai -m space --focus prev;
cmd + ctrl - right : yabai -m window --space next; yabai -m space --focus next;
cmd + ctrl - 1     : yabai -m window --space 1; yabai -m space --focus 1;
cmd + ctrl - 2     : yabai -m window --space 2; yabai -m space --focus 2;
cmd + ctrl - 3     : yabai -m window --space 3; yabai -m space --focus 3;
cmd + ctrl - 4     : yabai -m window --space 4; yabai -m space --focus 4;
cmd + ctrl - 5     : yabai -m window --space 5; yabai -m space --focus 5;
cmd + ctrl - 6     : yabai -m window --space 6; yabai -m space --focus 6;
cmd + ctrl - 7     : yabai -m window --space 7; yabai -m space --focus 7;
cmd + ctrl - 8     : yabai -m window --space 8; yabai -m space --focus 8;
cmd + ctrl - 9     : yabai -m window --space 9; yabai -m space --focus 9;
cmd + ctrl - 0     : yabai -m window --space 0; yabai -m space --focus 0;

# gaps
ctrl - left  : yabai -m space --padding rel:-4:-4:-4:-4; yabai -m space --gap rel:-4;
ctrl - right : yabai -m space --padding rel:4:4:4:4; yabai -m space --gap rel:4;
