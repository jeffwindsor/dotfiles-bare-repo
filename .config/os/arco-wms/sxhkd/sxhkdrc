# sxhkd - reload
super + control + Delete
	pkill -USR1 -x sxhkd

# exit window manager
super + x
    arcolinux-logout

## Applications ###########
# processes
super + Escape
    xfce4-taskmanager

# launcher
super + space
    dmenu_run

# scripts
super + control + space
    ls -p $HOME/.local/scripts | rg -v / | dmenu

# terminal
super + Return
    alacritty
super + Down
    xfce4-terminal --drop-down

# files
super + control + alt + Return
    thunar

# browser
super + control + Return
    firefox

# settings (alternate)
super + .
    arcolinux-tweak-tool

# editors
super + control + \ 
    emacs
super + \
    nvim

## Menus ##################
# dmenu
super + alt + Space
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

# Rofi
super + Space
    rofi -show drun

#Rofi theme selector
super + r
    rofi-theme-selector

## Desktop ################
# volume control
super + control + v
    pavuctrl

# print screen
super + Escape
    scrot 'ArcoLinux-%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f $$(xdg-user-dir PICTURES)'
super + shift + Escape
    xfce4-screenshooter

# wallpapers
control + Left
    variety -p
control + Right
    variety -n

# media
XF86AudioRaiseVolume
    amixer set Master 10%+
XF86AudioLowerVolume
    amixer set Master 10%-
XF86AudioMute
    amixer -D pulse set Master 1+ toggle

XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioStop
    playerctl stop

# monitor brightness
XF86MonBrightnessUp
    xbacklight -inc 10
XF86MonBrightnessDown
    xbacklight -dec 10

