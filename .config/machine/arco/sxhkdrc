
super + space
    dmenu_run

super + control + space
    ls -p $HOME/.local/scripts | rg -v / | dmenu

super + Return
    alacritty

super + shift + Return
    thunar

super + control + Return
    firefox

super + .
    arcolinux-tweak-tool

super + v
    pavuctrl

super + Escape
    xfce4-taskmanager

super + x
    arcolinux-logout

super + e 
    emacs

# wallpapers
control + Left
    variety -p

control + Right
    variety -n

# kill window
super + q
    xkill

